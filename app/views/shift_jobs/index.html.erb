<p id="notice"><%= notice %></p>

<h1>Shift Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_jobs.each do |shift_job| %>
      <tr>
        <td><%= shift_job.job_id %></td>
        <td><%= shift_job.shift_id %></td>
        <td><%= link_to 'Show', shift_job, :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Edit', edit_shift_job_path(shift_job), :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Destroy', shift_job, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "teal-text text-lighten-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift Job', new_shift_job_path, :class=> "btn waves-effect waves-teal" %>
