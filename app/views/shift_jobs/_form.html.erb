  <div class="input-field">
    <%= form.label :shift_id, :class=>"active"  %>
    <%= form.select(:shift_id, options_for_select(Shift.incompleted.map { |p| [  p.id] }, selected: shift_job.shift_id), prompt: "Please Select") %>
  </div>

   <div class="actions">  
	  <%= form.submit :class=>"btn waves-effect waves-light" %>  
