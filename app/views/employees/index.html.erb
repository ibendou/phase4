<p id="notice"><%= notice %></p>

<h3>Listing Employees</h3>

<table class="highlight">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Ssn</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Phone</th>
      <th scope="col">Role</th>
      <th scope="col">Active</th>
      <th colspan="3"><Options></Options></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.ssn %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.role %></td>
        <td><%= employee.active %></td>
        <td><%= link_to 'Show', employee, :class=>"teal-text text-lighten-1" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), :class=>"teal-text text-lighten-1" %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"teal-text text-lighten-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col">
    <%= if current_employee.role=="admin" then link_to 'New Employee', new_employee_path, :class=> "btn waves-effect waves-teal" end %>
</div>

<div class="row"></div>

