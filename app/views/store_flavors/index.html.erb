<p id="notice"><%= notice %></p>

<h1>Store Flavors</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Flavor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_flavors.each do |store_flavor| %>
      <tr>
        <td><%= store_flavor.store.name %></td>
        <td><%= store_flavor.flavor.name %></td>
        <td><%= link_to 'Show', store_flavor,  :class=>"teal-text text-lighten-1"  %></td>
        <td><%= link_to 'Edit', edit_store_flavor_path(store_flavor),  :class=>"teal-text text-lighten-1"  %></td>
        <td><%= link_to 'Destroy', store_flavor, method: :delete, data: { confirm: 'Are you sure?' },  :class=>"teal-text text-lighten-1"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col">
    <%= link_to 'Add another Flavor to a Store ', new_store_flavor_path, :class=> "btn waves-effect waves-teal" %>
</div>

<div class="row"></div>