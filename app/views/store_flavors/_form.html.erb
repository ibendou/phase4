<%= form_with(model: store_flavor, local: true) do |form| %>
  <% if store_flavor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store_flavor.errors.count, "error") %> prohibited this store_flavor from being saved:</h2>

      <ul>
      <% store_flavor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :store_id, :class=>"active" %>
    <%= form.select(:store_id, options_for_select(Store.for_manager(current_employee.id).map { |p| [ p.name, p.id] }, selected: store_flavor.store_id), prompt: "Please Select") %>
   
   
  </div>

  <div class="input-field">
    <%= form.label :flavor_id, :class=>"active" %>
     <%= form.select(:store_id, options_for_select(Flavor.all.map { |p| [ p.name, p.id] }, selected: store_flavor.flavor_id), prompt: "Please Select") %>
   
    
  </div>

  <div class="actions">  
	  <%= form.submit :class=>"btn waves-effect waves-light" %>  
	  <%= link_to 'Cancel', store_flavors_path, :class => 'waves-effect waves-light btn red' %> 
	</div>
	
<% end %>
