<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.active %></td>
        <td><%= link_to 'Show', job, :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Edit', edit_job_path(job), :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "teal-text text-lighten-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col">
    <%=if current_employee!=nil and current_employee.role=="admin" then link_to 'New Job', new_job_path, :class=> "btn waves-effect waves-teal" end %>
</div>

<div class="row"></div>