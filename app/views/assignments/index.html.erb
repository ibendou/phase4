<p id="notice"><%= notice %></p>

<h2>Listing All Assignments</h2>

<table class="highlight">
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Pay level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= Store.find(assignment.store_id).name %></td>
        <td><%= assignment.employee_id %></td>
        <td><%= assignment.start_date %></td>
        <td><%= assignment.end_date %></td>
        <td><%= assignment.pay_level %></td>
        <td><%= link_to 'Show', assignment, :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment), :class=> "teal-text text-lighten-1" %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "teal-text text-lighten-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col">
    <%= link_to 'New Assignment', new_assignment_path, :class=> "btn waves-effect waves-teal" %>
</div>

<div class="row"></div>
